import tkinter as tk
from PIL import Image

class Aplicacion():

    ''' 
        Establece GUI  para el modulo integrado de n√∫meros primos (Numpri).
    '''

    def __init__(self):

       self.ventanaInicial = None

    def ventanaPrincipal(self):

       self.ventanaInicial = tk.Tk()
       self.ventanaInicial.title('Numpri')
       self.ventanaInicial.geometry("1366x768+0+0")
       self.ventanaInicial.config(bg="#3E8989")

       Aplicacion().imagenesVentanas(self.ventanaInicial,'imagenInicial.ppm')

       self.boton = tk.Button( self.ventanaInicial, text="Siguiente", command=Aplicacion().nuevaVentana) 
       self.boton.pack()   

       return self.ventanaInicial      
    

    

    def nuevaVentana(self):

       self.ventanaSecundaria = tk.Toplevel(self.ventanaInicial)  
       Aplicacion().imagenesVentanas(self.ventanaSecundaria,'imagenSecundaria.ppm')  
        
       self.ventanaSecundaria.geometry("1366x768+0+0")
       self.ventanaSecundaria.config(bg="#F1E8B8")

        
       self.boton = tk.Button( self.ventanaSecundaria, text="Calculadora", bg="#3E8989", command=self.ventanaSecundaria.quit) 
       self.boton.pack()
        
       self.boton = tk.Button( self.ventanaSecundaria, text="Juegos", bg="#3E8989",command=self.ventanaSecundaria.quit) 
       self.boton.pack() 


    def imagenesVentanas(self,ventana,nombreImagen):

       imagenVentanaInicial = Image.open(nombreImagen)
       anchoImagen, largoImagen = imagenVentanaInicial.size
       canvasImagenInicial = tk.Canvas(ventana, width= anchoImagen, height=largoImagen)
       canvasImagenInicial.pack()

       imagenInicialTk = tk.PhotoImage(file=nombreImagen)
       canvasImagenInicial.create_image(anchoImagen/2.,largoImagen/2.,image=imagenInicialTk)
       canvasImagenInicial.image = imagenInicialTk
    



 

  

    
     
    
            
    
        




  

